<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArxivExpress.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="ArxivExpress"/>
    </ContentPage.ToolbarItems>

    <StackLayout>
        <ScrollView>
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">

                <Button Text="Search" Pressed="Handle_SearchPressed"
                        ImageSource="icons8_search_32"
                        BorderColor="Black" BackgroundColor="White"
                        BorderWidth="1" Margin="10,40,10,10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="Black"/>

                <Button Text="Recently Viewed" Pressed="Handle_RecentlyViewedPressed"
                        ImageSource="icons8_activity_history_32"
                        BorderColor="Black" BackgroundColor="White"
                        BorderWidth="1" Margin="10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="Black"/>

                <Button Text="Liked Articles" Pressed="Handle_LikedArticlesPressed"
                        ImageSource="icons8_heart_32"
                        BorderColor="Black" BackgroundColor="White"
                        BorderWidth="1" Margin="10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="Black"/>

                <!--
                <Button Text="Recommended Articles" Pressed="Handle_RecommendedArticlesPressed"
                        BorderColor="#2196F3" BackgroundColor="#2196F3"
                        BorderWidth="2" Margin="10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="White"/>
                -->

                <Button Text="Authors" Pressed="Handle_ViewedAuthorsPressed"
                        ImageSource="icons8_contacts_32"
                        BorderColor="Black" BackgroundColor="White"
                        BorderWidth="1" Margin="10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="Black"/>

                <Button Text="Lists" Pressed="Handle_ListsPressed"
                        ImageSource="icons8_book_shelf_32"
                        BorderColor="Black" BackgroundColor="White"
                        BorderWidth="1" Margin="10" HeightRequest="50"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        WidthRequest="200" TextColor="Black"/>

            </StackLayout>
        </ScrollView>
    </StackLayout>

</ContentPage>
