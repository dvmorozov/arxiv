<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ArxivExpress.Features.SelectedArticles.Forms.NewList">
    <StackLayout>
        <Grid Margin="16,16,16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Text="List Name" VerticalOptions="End"/>

            <Entry Grid.Column="0" Grid.Row="1" x:Name="EntryListName" TextChanged="Handle_TextChanged"
                    Placeholder="List name..." HorizontalOptions="FillAndExpand"
                    ClearButtonVisibility="WhileEditing" Completed="Handle_EntryCompleted"/>
        </Grid>

        <Button Text="Create" Pressed="Handle_CreateNewListPressed"
                BorderColor="Black" BackgroundColor="White"
                BorderWidth="1" Margin="10" HeightRequest="50"
                VerticalOptions="Center" HorizontalOptions="Center"
                WidthRequest="200" TextColor="Black"/>
    </StackLayout>
</ContentPage>
